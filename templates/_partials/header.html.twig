<header>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_main') }}">Forum</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('ticket-main') }}">Tickets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('category-main') }}">Catégories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('ticket-add') }}">Ajouter un ticket</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMINISTRATOR') %}
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('user-list') }}">Liste utilisateurs</a>
                    </li>
                {% endif %}
            </ul>
            <div class="text-end">
                {% if app.user %}
                    <a href="{{ path('user-main') }}" class="btn btn-primary me-2">Mon compte</a>
                    <a href="{{ path('authentication-logout') }}" class="btn btn-outline-danger me-2">Déconnexion</a>
                {% else %}
                    <a href="{{ path('authentication-register') }}" class="btn btn-outline-primary me-2">S'inscrire</a>
                    <a href="{{ path('authentication-login') }}" class="btn btn-outline-dark me-2">Se connecter</a>
                {% endif %}
            </div>
        </div>
    </nav>
</header>